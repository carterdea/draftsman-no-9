{
  "name": "draftsman-no-9",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "cd apps/api && bun run dev",
    "dev:worker": "cd apps/worker && bun run dev",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "bun x tsc --noEmit",
    "check": "bun run typecheck && bun run test",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check:biome": "biome check .",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@types/bun": "1.3.9",
    "lefthook": "^2.1.1",
    "typescript": "^5.9.3"
  }
}
